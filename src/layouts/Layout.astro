---
export interface LayoutProps {
  fullName: string
  jobTitle: string
}

const { fullName, jobTitle } = Astro.props as LayoutProps
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{`${fullName} | ${jobTitle}`}</title>
    <meta name="description" content={`${fullName} | ${jobTitle}`} />
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" href="satoshi/css/satoshi.css" />
    <link
      rel="stylesheet"
      href="css/fontawesome-pro-6.2.1/css/fontawesome.min.css"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="css/fontawesome-pro-6.2.1/css/all.min.css"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="css/fontawesome-pro-6.2.1/css/brands.min.css"
      type="text/css"
    />
  </head>

  <body>
    <div id="content">
      <slot />
    </div>
  </body>
</html>

<style lang="scss">
  $innerWidth: 75em;
  $htmlBackground: #eee;
  $bodyBackground: #fff;

  html {
    width: 100%;
    background-color: $htmlBackground;

    body {
      width: 100%;
      margin: 0;
      padding: 0;
      font-family: var(--regular-font);
      font-size: 16px;

      a {
        outline: none;
      }

      #content {
        width: 100%;
        max-width: $innerWidth;
        margin: 4rem auto 2rem;
        background-color: $bodyBackground;
        display: grid;
        grid-template-columns: 3fr 1fr;
        grid-template-rows: auto;
      }
    }
  }
</style>
