---
export interface SkillProps {
  title: string
}
const { title } = Astro.props as SkillProps
---

<article class="skill">
  <div class="skill__title">{title}</div>
</article>

<style lang="scss">
  $skillBackgroundColor: #fff;
  $skillColor: var(--primary-background-color);

  .skill {
    display: inline-block;
    background-color: $skillBackgroundColor;
    color: $skillColor;
    border-radius: 0.25rem;
    padding: 0.5rem;
    margin: 0 0 0.45rem 0.25rem;

    &__title {
      font-family: var(--bold-font);
      font-size: 0.9rem;
      font-weight: 500;
      text-align: center;
    }
  }
</style>
